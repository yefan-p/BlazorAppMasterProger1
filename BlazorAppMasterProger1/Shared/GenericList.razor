@typeparam TItem

@if (ListOfItems == null)
{
    @if (NullList != null)
    {
        @NullList
    }
    else
    {
        <img src="https://www.nrecosite.com/img/img-loading.gif" height="200" />
    }
}
else if (ListOfItems.Count == 0)
{
    if (EmptyList != null)
    {
        @EmptyList
    }
    else
    {
        <img src="https://www.jdsports.my/skins/default/public/img/icons/preload-black.gif" height="200" />
    }
}
else
{
    @foreach (var item in ListOfItems)
    {
        @ItemTemplate(item)
    }
}

@code {
    [Parameter] public RenderFragment EmptyList { get; set; }
    [Parameter] public RenderFragment NullList { get; set; }


    [Parameter] public RenderFragment<TItem> ItemTemplate { get; set; }

    [Parameter] public List<TItem> ListOfItems { get; set; }
}
