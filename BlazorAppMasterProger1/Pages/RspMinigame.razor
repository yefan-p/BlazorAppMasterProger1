@page "/rsp"

<div class="row text-center ">
    <div class="col">
        <h1 class="text-success ">
            RSP minigame
        </h1>
    </div>
</div>

@if (!string.IsNullOrWhiteSpace(_gameResultMessage))
{
    <div class="row">
        <div class="col text-center alert alert-@_resultStyle ">
            <h3>@_gameResultMessage</h3>
        </div>
    </div>
}

<div class="row text-center ">
    <div class="col mb-5 justify-content-center">
        <img src="@_opponenet.Image"
             class="general-image" />
    </div>
</div>

<div class="row text-center ">
    <div class="col mb-5 justify-content-center">
        <button class="btn btn-primary " @onclick="ResetGame">
            Start New Game
        </button>
    </div>
</div>

<div class="row text-center justify-content-around ">
    @foreach (var item in _games)
    {
        <div class="col">
            <img src="@item.Image"
                 class="general-image hovered-image"
                 @onclick="() => SelectingHandler(item)" />
        </div>
    }
</div>
